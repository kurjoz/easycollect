@@include('./components/head/_head.html')

  %body
    @@include('./components/header/_header.html')
    .container-fluid
      .row.justify-content-center
        .col-md-4
          %h2.__content-spaced Einloggen
          %form.form
            .input-grp
              %label.input-grp__lbl Email
              %input.input-control.__text{type: "text", name:"email", placeholder: "Email"}
            .input-grp
              %label.input-grp__lbl Password
              %input.input-control.__password{type: "password", name:"password", placeholder: "Password"}
            .input-grp.__links
              %a.input-grp__link{href: "#"} Passwort vergessen
              %a.input-grp__link.__to-right{href: "#"} Account confirmation page
            .input-grp.__submit
              %button.btn.btn-primary{for: "group-2"} Einloggen
    @@include('./components/footer/_footer.html')
