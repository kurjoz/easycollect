@@include('./components/head/_head.html')

  %body
    @@include('./components/header/_header__registration.html')
    .container-fluid
      .row.justify-content-center
        .col-md-4
          %h2.__content-spaced Registrieren
          %form.form
            .input-grp
              %label.input-grp__lbl Type mail
              %input.input-control.__text{type: "text", name:"email", placeholder: "Email"}
            .input-grp
              %label.input-grp__lbl Type password (least 8 characters)
              %input.input-control.__password{type: "password", name:"password", placeholder: "Password"}
            .input-grp.__submit
              %button.btn.btn-primary{for: "group-2"} Registrieren
    @@include('./components/footer/_footer.html')
